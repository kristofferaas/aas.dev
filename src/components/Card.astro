---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="border p-4 rounded-lg">
  <a href={href} class="flex flex-col gap-4">
    <h2 class="text-lg font-bold">
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
